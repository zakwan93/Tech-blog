
<% if @article.errors.any? %>
	<h2> The following errors prevented the article from getting created </h2>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
		<% end %>
	</ul>
<% end %>

<%= form_for @article do |f| %>
		<div class="form-group">
    		<%= f.label :title %>
    		<%= f.text_field :title, class: "form-control" %>
  		</div>

  		<div class="form-group">
    		<%= f.label :deiscription %>
    		<%= f.text_area :deiscription, class: "form-control" %>
  		</div>
  		<div class="form-group">
  			<%= f.submit(@article.new_record? ? "Create New Artcile" : "Update Article", class: "btn btn-primary btn-lg pt-0 pb-0") %>
  		</div>

<% end %>

<%= link_to "Back to articles listing", articles_path %>

