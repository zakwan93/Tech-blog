
<% if @user.errors.any? %>
		<h2> The following errors prevented the article from getting created </h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li> <%= msg %> </li>
			<% end %>
		</ul>
<% end %>

<%= form_for @user do |f| %>
		<div class="form-group">
			<div class="col-sm-2">
				<%= f.label :username %> 
			</div>
			<div class="col-sm-12">
				<%= f.text_field :username, class: "form-control", placeholder: "Enter Username" %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-2">
				<%= f.label :email %>
			</div>
			<div class="col-sm-12">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
			</div>
		</div>


		<div class="form-group">
			<div class="col-sm-2">
				<%= f.label :password %>
			</div>
			<div class="col-sm-12">
				<%= f.password_field :password, class: "form-control", placeholder: "Enter Your Password" %>
			</div>
		</div>


		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-primary btn-lg pt-0 pb-0") %>
			</div>
		</div>
	<% end %>

	<div class="col-xs-4 col-xs-offset-4">
		[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
	</div>
