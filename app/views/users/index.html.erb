<h1 class="text-center mt-4 mb-4"> All Tech Bloggers </h1>
<hr>
<h6 class="d-flex justify-content-center pl-2 myPagination">
	<%= will_paginate @users ,renderer: BootstrapPagination::Rails %>
</h6>

<center>
	<% @users.each do |user| %>
		<div class="card mb-4 mt-4" style="width: 18rem;">
			<%= link_to gravatar_for(user), user_path(user), class: "card-img-top mt-3 mb-3" %>
		  <div class="card-header">
		    <p class="card-text "><%= link_to user.username, user_path(user) %></p>
		    <p class="card-text"><%= pluralize(user.articles.count, "article") if user.articles %></p>
		    <% if logged_in? and currunt_user.admin? %>
		    	<p>
		    		<%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete and all heir articles?"} %>
		    	</p>
		    <% end %>
		  </div>
		</div>
	<% end %>
</center>


<h6 class="d-flex justify-content-center pl-2 myPagination">
	<%= will_paginate @users ,renderer: BootstrapPagination::Rails %>
</h6>
